
{{> header }}

<div class="container">
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Lanst name</th>
      <th scope="col">Profession</th>
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Age</th>
      <th scope="col" colspan="2" class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each empleados}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{name}}</td>
      <td>{{last_name}}</td>
      <td>{{job}}</td>
      <td>{{phone}}</td>
      <td>{{address}}</td>
      <td>{{age}}</td>
      <td>{{rol }}</td>
      <td class="text-center">
          <button class="btn btn-danger" onclick="modaldelete({{id}})">Delete</button>
          {{!-- <button class="btn btn-success" onclick="modaldelete({{id}})">Edit</button> --}}
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary" onclick="modalEdit({{id}})" data-toggle="modal" data-target="#exampleModal">
            Edit
          </button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <form action="/user/update" method="post">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Employes</h5>
        {{!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button> --}}
      </div>
      <div class="modal-body">
          <div class="row">
            <div class="col-lg-6">
                <input type="hidden" id="id" name="id">
                <label for="">Name</label>
                <input type="text" class="form-controller" id="nameE" name="nameE">
            </div>
            <div class="col-lg-6">
                <label for="">Last Name</label>
                <input type="text" class="form-controller" id="lastNameE" name="lastNameE">
            </div>
          </div>

          <div class="row">
            <div class="col-lg-6">
                <input type="hidden" id="id" name="id">
                <label for="">Profession</label>
                <input type="text" class="form-controller" id="job" name="job">
            </div>
            <div class="col-lg-6">
                <label for="">Phone</label>
                <input type="text" class="form-controller" id="phoneE" name="phoneE">
            </div>
          </div>

          <div class="row">
            <div class="col-lg-6">
                <input type="hidden" id="id" name="id">
                <label for="">Email</label>
                <input type="text" class="form-controller" id="emailE" name="emailE">
            </div>
            <div class="col-lg-6">
                <label for="">Age</label>
                <input type="text" class="form-controller" id="ageE" name="ageE">
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">Save changes</button>
      </div>
    </div>
    </form>
  </div>
</div>

</div>

<script>
    function modaldelete(id){
       
        Swal.fire({
            title: "Estas seguro(a)?",
            text: "No podra revertir esta accion",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: "Si eliminar"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/employe/delete/${id}`;  
            }
        })
    }

    async function modalEdit(id){
      const usuario = await fetch(`http://localhost:6001/employe/edit/${id}`);
      const user = await usuario.json();
      $('#nameE').val(user.e.name);
      $('#lastNameE').val(user.e.last_name);
      $('#job').val(user.e.job);
      $('#phoneE').val(user.e.phone);
      $('#emailE').val(user.e.address);
      $('#ageE').val(user.e.age);
      $('#id').val(user.e.id);
    }
</script>
